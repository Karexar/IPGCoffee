<div class="horizontal">
    <div style="color:red;">
        <%= flash[:error] %>
    </div>
    <div>
        <a href="/admins/login">Login as admin</a>
    </div>
</div>
<div class="images_list">
  <% @users.each do |user| %>
  <div class="image_user">
    <%= link_to "/buy/new_order/#{user.id}>", method: "post" do %>
      <% picture_name = "#{user.id}.jpg"%>
      <% if !File.file?("app/assets/images/people/#{picture_name}") %>
        <% picture_name = "shadow.jpg" %>
      <% end %>
      <%= image_tag "people/#{picture_name}",
                    alt: "#{user.name}'s profile picture",
                    width: 100,
                    height: 75 %>
           <div><%= user.name %></div>
    <% end %>
  </div>
  <% end %>
</div>
